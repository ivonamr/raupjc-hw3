
@using System.Threading.Tasks
@using zad2.Models.Todo
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model AddTodoViewModel
@{
    ViewBag.Title = "Add new todo";
    Layout = "_Layout";
}
<h2>Add new todo</h2>
<div>
    <form asp-action="Add" method="post">
        Todo text: <input asp-for="Text" class="form-control" /> <span asp-validation-for="Text" class="text-danger"></span> <br />
        Date due: <input asp-for="DateDue" class="form-control"  /><span asp-validation-for="DateDue" class="text-danger"></span><br />
        
        Todo Labels: <input asp-for="Labels" class="form-control" /> <span asp-validation-for="Labels" class="text-danger"></span> <br />
        <input type="submit" class="btn btn-default" /> &nbsp;
        <a asp-action="Index" class="btn btn-default">Cancel</a>
        
    </form>
</div>

